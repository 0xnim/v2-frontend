---
import NavBar from './NavBar.astro'
---
	<header class="top-box" id="header">
		<NavBar />
	</header>

<style>
  .top-box {
      width: 100%; /* Makes the box full width */
      height: 64px; /* Sets the height to 64 pixels */
      background-color: #f0f0f0; /* Example background color */
      position: fixed; /* Keeps the box at the top of the page */
      top: 0; /* Aligns the box to the top */
      left: 0; /* Aligns the box to the left */
  }
</style>
